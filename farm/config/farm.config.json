{
  "name": "chess-market-farm",
  "version": "2.0.0",
  "description": "High-throughput compute farm for chess game generation, puzzles, and market prediction",
  "workers": {
    "chessGameGenerator": {
      "enabled": true,
      "instances": 4,
      "batchSize": 10,
      "depth": 24,
      "maxMoves": 100,
      "restBetweenBatchesMs": 2000,
      "outputDir": "./farm/data/chess_games",
      "qualityThreshold": 2200
    },
    "puzzleProcessor": {
      "enabled": true,
      "instances": 2,
      "batchSize": 25,
      "sources": ["lichess", "chesscom"],
      "ratingRange": [1200, 2800],
      "restBetweenBatchesMs": 3000,
      "outputDir": "./farm/data/puzzles"
    },
    "marketAnalyzer": {
      "enabled": true,
      "instances": 1,
      "analysisIntervalMs": 300000,
      "symbols": ["SPY", "QQQ", "IWM", "VIX"],
      "outputDir": "./farm/data/market_analysis"
    },
    "predictionBenchmark": {
      "enabled": false,
      "instances": 0,
      "gamesPerBatch": 20,
      "predictionMove": 20,
      "depth": 24,
      "restBetweenBatchesMs": 5000,
      "outputDir": "./farm/data/benchmarks"
    },
    "enpensentBenchmark": {
      "enabled": true,
      "instances": 2,
      "gamesPerBatch": 10,
      "predictionMove": 20,
      "restBetweenBatchesMs": 60000,
      "outputDir": "./farm/data/benchmarks",
      "useRealGames": true,
      "workerFile": "enpensent-benchmark-worker.mjs",
      "description": "Real Lichess games with data integrity validation"
    },
    "highFrequencyTrader": {
      "enabled": true,
      "instances": 1,
      "workerFile": "high-frequency-paper-trader.mjs",
      "bridgeUrl": "http://localhost:4000",
      "gatewayHost": "127.0.0.1",
      "gatewayPort": 4002,
      "description": "High-frequency equity scalping with real IBKR paper execution"
    },
    "ibkrTrader": {
      "enabled": false,
      "instances": 0,
      "bridgeUrl": "http://localhost:4000",
      "gatewayHost": "127.0.0.1",
      "gatewayPort": 4002,
      "symbols": ["SPY", "QQQ", "AAPL", "NVDA", "TSLA", "AMD"]
    },
    "optionsScalping": {
      "enabled": true,
      "instances": 1,
      "bridgeUrl": "http://localhost:4000",
      "cycleIntervalMs": 20000,
      "maxPositions": 3,
      "underlyings": ["SPY", "QQQ", "IWM", "AAPL", "TSLA", "NVDA"]
    }
  },
  "logging": {
    "level": "info",
    "maxLogSizeMB": 200,
    "maxLogFiles": 20,
    "logDir": "./farm/logs"
  },
  "system": {
    "maxMemoryPercent": 85,
    "maxCpuPercent": 95,
    "autoRestartOnFailure": true,
    "restartDelayMs": 3000,
    "maxRestartsPerHour": 20,
    "parallelProcessing": true
  }
}
